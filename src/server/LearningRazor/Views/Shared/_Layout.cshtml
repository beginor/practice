<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<link href="@Href("~/Assets/Styles/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
	<div class="page">
		<div id="header">
			<div id="title">
				<h1>My MVC Application</h1>
			</div>
			<div id="logindisplay">
				@Html.Partial("_LogOnPartial")
			</div>
			<div id="menucontainer">
				<ul id="menu">
					<li>@Html.ActionLink("Home", "Index", "Test")</li>
					<li>@Html.ActionLink("About", "About", "Test")</li>
				</ul>
			</div>
		</div>
		<div id="main">
			@RenderBody()
		</div>
		<div id="footer">
		</div>
	</div>
</body>
</html>
